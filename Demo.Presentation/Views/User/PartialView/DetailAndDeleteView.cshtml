@using Demo.Presentation.ViewModels.User
@model UserDetailsDto
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@

<div class="row">
	<div class="form-group mb-3 col-6">
		<label class="form-label" asp-for="Id"></label>
		<input asp-for="Id" class="form-control" readonly />
	</div>
	<div class="form-group mb-3 col-6">
		<label class="form-label" asp-for="FName"></label>
		<input asp-for="FName" class="form-control" readonly />
	</div>
	<div class="form-group mb-3 col-6">
		<label class="form-label" asp-for="LName"></label>
		<input asp-for="LName" class="form-control" readonly />
	</div>
	<div class="form-group mb-3 col-6">
		<label class="form-label" asp-for="Email"></label>
		<input asp-for="Email" class="form-control" readonly />
	</div>
	<div class="form-group mb-3 col-6">
		@if (Model.PhoneNumber != null)
		{
			<label class="form-label" asp-for="PhoneNumber"></label>
			<input asp-for="PhoneNumber" class="form-control" />
		}
	</div>
</div>
