@using Demo.Presentation.ViewModels.User
@model UserDetailsDto
@{
	ViewData["Title"] = "Details";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="my-5 text-center text-primary">
	User @string.Concat(Model.FName, " ", Model.LName) Details
</h1>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-10 col-lg-8">
			<div class="border rounded shadow-sm p-4">
				<form class="w-100">
					<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

					<partial name="PartialView/DetailAndDeleteView" />

					<div class="d-flex justify-content-between mt-4">
						<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success px-4">Edit</a>
						<a asp-action="Index" class="btn btn-outline-dark px-4">Back To List</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
