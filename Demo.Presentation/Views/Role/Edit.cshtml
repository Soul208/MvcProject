@model IdentityRole
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-4">
                    <h2 class="text-center text-success mb-4">Edit Role: @Model.Name</h2>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form method="post" asp-action="Edit" novalidate>
                        <div class="mb-3">
                            <label for="roleId" class="form-label fw-semibold">Role ID</label>
                            <input asp-for="Id" id="roleId" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label for="roleName" class="form-label fw-semibold">Role Name</label>
                            <input asp-for="Name" id="roleName" class="form-control" placeholder="Enter role name" required />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success px-4">Save Changes</button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
