@model IdentityRole
@{
    ViewData["Title"] = "Role Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-4">
                    <h2 class="text-center text-primary mb-4">Role Details</h2>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Role ID</label>
                        <input class="form-control" value="@Model.Id" readonly />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Role Name</label>
                        <input class="form-control" value="@Model.Name" readonly />
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary px-4">
                            <i class="fas fa-edit me-1"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-list me-1"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
