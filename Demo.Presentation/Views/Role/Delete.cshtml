@model IdentityRole
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-body p-4">
                    <h2 class="text-center text-danger mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i> Delete Role
                    </h2>

                    <p class="text-center text-muted mb-4">
                        Are you sure you want to delete the role <strong class="text-dark">"@Model.Name"</strong>?
                    </p>

                    <form method="post" asp-action="Delete">
                        <div class="mb-3">
                            <label for="roleId" class="form-label fw-semibold">Role ID</label>
                            <input asp-for="Id" id="roleId" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label for="roleName" class="form-label fw-semibold">Role Name</label>
                            <input asp-for="Name" id="roleName" class="form-control" readonly />
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="fas fa-trash-alt me-1"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
